<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modelo"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/item_tv_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marca"
        android:textSize="14sp"
        android:layout_below="@id/item_tv_name"
        android:id="@+id/item_tv_model"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:textSize="14sp"
        android:layout_below="@id/item_tv_model"
        android:id="@+id/item_tv_price"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@drawable/bici1"
        android:layout_toEndOf="@id/item_tv_name"
        android:id="@+id/item_iv_image"/>

</RelativeLayout>